<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- hr.contract form inherit view -->
    <record id="view_hr_contract_form_inherit" model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherit</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='information']" position="attributes">
                <attribute name="autofocus">autofocus</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <h2 invisible="state != 'close'">
                    <label for="reason_id" string="Fired reason:"/>
                    <field name="reason_id" class="oe_inline" options='{"no_open": True}' widget="selection"/>
                </h2>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Job History">
                    <field name="job_ids" nolabel="1" readonly="1">
                        <list string="Job History">
                            <field name="contract_id" column_invisible="1"/>
                            <field name="date"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="old_job_id"/>
                            <field name="job_id"/>
                            <field name="name"/>
                        </list>
                    </field>
                </page>
                <page string="Wage History">
                    <field name="wage_ids" nolabel="1" readonly="1">
                        <list string="Wage History">
                            <field name="contract_id" column_invisible="1"/>
                            <field name="date"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="old_wage"/>
                            <field name="wage"/>
                            <field name="name"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <menuitem id="hr_contract.hr_menu_contract" action="hr_contract.action_hr_contract" parent="hr.menu_hr_root" name="Contracts" sequence="4" groups="hr_contract.group_hr_contract_manager"/>

</odoo>
