<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_contract_type_view_inherit" model="ir.ui.view">
        <field name="name">hr.contract.type.form</field>
        <field name="model">hr.contract.type</field>
        <field name="inherit_id" ref="hr.hr_contract_type_view_form"/>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="antiquity"/>
                <field name="internship"/>
                <field name="country_id" required="1"/>
            </xpath>
        </field>
    </record>

    <record id="hr_contract_type_tree_inherit" model="ir.ui.view">
        <field name="name">hr.contract.type.tree</field>
        <field name="model">hr.contract.type</field>
        <field name="inherit_id" ref="hr.hr_contract_type_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="antiquity"/>
                <field name="internship"/>
                <field name="country_id"/>
            </xpath>
        </field>
    </record>
</odoo>
