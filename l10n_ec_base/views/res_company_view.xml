<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="l10n_ec_base_res_company_form_inherit" model="ir.ui.view">
    <field name="name">l10n_ec_base_res_company.form</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="account.view_company_form" />
    <field name="priority" eval="8" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='vat']" position="before">
        <field name="l10n_latam_identification_type_id" widget="selection" />
      </xpath>

      <xpath expr="//field[@name='website']" position="after">
        <field name="property_account_position_id" invisible="country_code != 'EC'" />
      </xpath>
    </field>
  </record>
</odoo>
